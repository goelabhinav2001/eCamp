<% layout('layouts/boilerplate') %>
    <div class="row mb-3">
        <div class="col-6 offset-3">
            <h1 class="text-center">
                New Campground
            </h1>
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label" for="name">Name:</label>
                    <input class="form-control" type="text" name="campground[name]" id="name" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
 
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Upload Image</label>
                    <input type="file" name="image" id="image" class="form-control" multiple>
                    <div class="valid-feedback">
                        Looks good!
                      </div>

                </div>
                <div>
                    <label for="price" class="form-label">Campground price:</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" name="campground[price]" id="price"
                            aria-label="Amount (to the nearest dollar)" required>
                            <div class="valid-feedback">
                                Looks good!
                              </div>

                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" name="campground[description]" id="description" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                      </div>

                </div>

                <button class="btn btn-success mb-3">Add campground</button>


            </form>
        </div>

    </div>
    